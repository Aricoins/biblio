# Database Configuration
DATABASE_URL="postgresql://usuario:password@localhost:5432/dibiase_db"

# Clerk Authentication (Required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_key_here"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_here"

# AI Service Configuration (At least one required)
# OpenRouter (Recommended - Free tier available)
OPENROUTER_API_KEY="sk-or-your-openrouter-key-here"

# OpenAI (Optional - Paid service)
OPENAI_API_KEY="sk-your-openai-key-here"

# Anthropic Claude (Optional - Paid service)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# Application Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NODE_ENV="development"

# Google Services (Optional - for external data integration)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Cloudinary (Optional - for image hosting)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Vercel Analytics (Optional)
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"